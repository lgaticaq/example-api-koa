{
  "name": "example-api-koa",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "start": "node src",
    "dev": "nodemon --inspect src",
    "lint": "eslint . --fix",
    "format": "prettier-standard 'src/**/*.js' 'test/**/*.js'",
    "precommit": "lint-staged",
    "pretest": "npm run lint -s && npm run format -s",
    "test": "echo ':C'"
  },
  "engines": {
    "node": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lgaticaq/example-api-koa.git"
  },
  "keywords": [
    "koa",
    "api",
    "beerjs",
    "async"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lgaticaq/example-api-koa/issues"
  },
  "homepage": "https://github.com/lgaticaq/example-api-koa#readme",
  "dependencies": {
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-logger": "^3.0.1",
    "koa-router": "^7.2.1",
    "mongoose": "^4.11.5"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "eslint": "4.13.1",
    "eslint-config-standard": "10.2.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-node": "5.2.1",
    "eslint-plugin-promise": "3.6.0",
    "eslint-plugin-standard": "3.0.1",
    "husky": "0.14.3",
    "lint-staged": "6.0.0",
    "mocha": "4.0.1",
    "nodemon": "1.12.5",
    "now-travis": "1.2.0",
    "prettier-standard": "7.0.3",
    "supertest": "3.0.0"
  },
  "eslintConfig": {
    "extends": "standard",
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "no-console": [
        "error"
      ]
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ],
      "test/**/*.js": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ]
    }
  }
}
